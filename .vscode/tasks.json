{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake-configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "cmake-build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "-j"
      ],
      "group": "build",
      "dependsOn": "cmake-configure",
      "problemMatcher": []
    },
    {
      "label": "ctest",
      "type": "shell",
      "command": "ctest",
      "args": [
        "--output-on-failure"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": "test",
      "dependsOn": "cmake-build",
      "problemMatcher": []
    },
    {
      "label": "run-analytic-wire-test",
      "type": "shell",
      "command": "${workspaceFolder}/build/analytic_wire_test",
      "group": "test",
      "dependsOn": "cmake-build",
      "problemMatcher": []
    },
    {
      "label": "run-solver-benchmark",
      "type": "shell",
      "command": "${workspaceFolder}/build/solver_benchmark",
      "args": [
        "--nx",
        "129",
        "--ny",
        "129",
        "--max-iters",
        "5000",
        "--tol",
        "1e-6"
      ],
      "group": "test",
      "dependsOn": "cmake-build",
      "problemMatcher": []
    },
    {
      "label": "run-two-wire-scenario",
      "type": "shell",
      "command": "${workspaceFolder}/build/motor_sim",
      "args": [
        "--scenario",
        "${workspaceFolder}/inputs/two_wire_cancel.json",
        "--solve",
        "--write-midline"
      ],
      "group": "test",
      "dependsOn": "cmake-build",
      "problemMatcher": []
    }
  ]
}
